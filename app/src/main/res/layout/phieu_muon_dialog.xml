<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edMaPM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mã Phiếu Mượn: "
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
        <Spinner
            android:id="@+id/spMaTV"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="5dp"/>
        <Spinner
            android:id="@+id/spMaSach"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="5dp"/>
        <TextView
            android:padding="10dp"
            android:id="@+id/tvNgay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngày: "
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="5dp"/>
        <TextView
            android:id="@+id/tvTienThue"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tiền Thuê: "
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="5dp"/>
        <TextView
            android:padding="10dp"
            android:id="@+id/tvGio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giờ: "
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="5dp"/>
        <CheckBox
            android:id="@+id/chkTraSach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đã trả sách"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
           >
            <Button
                android:id="@+id/btnSavePM"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Lưu"
                android:drawableLeft="@drawable/ic_save"
                android:layout_marginRight="5dp"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/btnCancelPM"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Hủy"
                android:drawableLeft="@drawable/ic_cancel"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>